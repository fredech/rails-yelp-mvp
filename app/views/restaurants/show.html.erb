<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.category %></p>
<p><%= @restaurant.address %></p>
<p>Phone number: <%= @restaurant.phone_number %></p>




<ul><% @restaurant.reviews.each do  |review| %>
  <li><%= review.content%>      <strong><%= review.rating%></strong></li>
  <%end %>

</ul>
<%= link_to "Go Back to Restaurants List", restaurants_path, class: "btn btn-primary"%>
<%= link_to "Add a Review", new_restaurant_review_path(@restaurant), class: "btn btn-primary"%>
